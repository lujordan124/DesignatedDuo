<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drinklimitpage">
    <TextView
        android:layout_height="40dp"
        android:text="You"
        android:id="@+id/you"
        android:layout_width="100dp"
        android:textSize = "30sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/them"
        android:layout_toRightOf="@+id/limit2"
        android:layout_toEndOf="@+id/limit2" />
    <TextView
        android:layout_height="40dp"
        android:text="Friend"
        android:id="@+id/them"
        android:layout_width="100dp"
        android:textSize = "30sp"
        android:textAlignment="center"
        android:layout_above="@+id/limit1"
        android:layout_toRightOf="@+id/you"
        android:layout_toEndOf="@+id/you" />
    <TextView
        android:text=""
        android:id="@+id/limit1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#fff"
        android:textSize="30sp"
        android:layout_alignTop="@+id/limit2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:text=""
        android:id="@+id/limit2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#fff"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="93dp"
        android:layout_alignParentBottom="true" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize = "30dp"
        android:text="-"
        android:textColor="#000"
        android:id="@+id/subtract"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/them"
        android:layout_alignLeft="@+id/add"
        android:layout_alignStart="@+id/add"
        android:layout_marginTop="119dp" />
    <TextView
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:text = "0"
        android:textColor="#000"
        android:textSize ="60dp"
        android:id="@+id/count"
        android:textAlignment="center"
        android:layout_below="@+id/limit1"
        android:layout_alignBottom="@+id/add"
        android:layout_alignLeft="@+id/check" />
    <Button
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:textSize = "30sp"
        android:text="+"
        android:textColor="#000"
        android:id="@+id/add"
        android:background="@drawable/round_button"
        android:layout_alignBottom="@+id/count"
        android:layout_alignRight="@+id/them"
        android:layout_alignEnd="@+id/them"
        android:layout_alignTop="@+id/subtract"
        android:layout_alignLeft="@+id/you"
        android:layout_alignStart="@+id/you" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/check"
        android:src="@drawable/check"
        android:layout_below="@+id/subtract"
        android:layout_toLeftOf="@+id/them"
        android:layout_toStartOf="@+id/them" />

</RelativeLayout>